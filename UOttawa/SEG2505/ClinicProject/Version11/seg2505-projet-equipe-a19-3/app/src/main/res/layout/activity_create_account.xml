<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F001A"
    tools:context=".CreateAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="251dp"
                    android:layout_height="232dp"
                    android:layout_gravity="center|center_vertical"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textCreerCompte1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Créer un compte"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textWelcome6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Remplir les informations suivantes pour t'inscrire."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCreerCompte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Type de compte:"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:layout_width="198dp"
                        android:checkedButton="@+id/radioButton2"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="18sp"
                            tools:visibility="visible" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Employé"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:textSize="18sp" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCreerCompte2"
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Prénom:"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/firstNameInput"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="center|left"
                        android:inputType="textPersonName|textCapWords"
                        android:isScrollContainer="false"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        tools:text="Prénom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCreerCompte3"
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Nom de famille:"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/lastNameInput"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="center|left"
                        android:inputType="textPersonName|textCapWords"
                        android:isScrollContainer="false"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        tools:text="Nom de famille" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCreerCompte6"
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Mot de passe:"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="center|left"
                        android:inputType="textPassword"
                        android:isScrollContainer="false"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        tools:text="Mot de passe" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textCreerCompte5"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Courriel:"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="307dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="center|left"
                        android:inputType="textWebEmailAddress"
                        android:isScrollContainer="false"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        tools:text="Courriel" />
                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:onClick="signUpClick"
                    android:text="Sign Up" />

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="ERREUR: Prenom, Nom ou Courriel invalide. Password must have at least 6 characters."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    tools:visibility="invisible" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>