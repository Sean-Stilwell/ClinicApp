<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F001A"
    tools:context=".LogInScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="322dp"
            android:layout_height="390dp"
            android:layout_gravity="center|center_vertical"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textLogin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:ellipsize="none"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:isScrollContainer="false"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:text="Nom d'utilisateur:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/textUserInput7"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="true"
                android:ellipsize="none"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:isScrollContainer="false"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                tools:text="Nom d'utilisateur" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/textLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:ellipsize="none"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:isScrollContainer="false"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:text="Mot de passe:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/textUserInput8"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="true"
                android:ellipsize="none"
                android:ems="10"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:isScrollContainer="false"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                tools:text="Mot de passe" />
        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="connecterClick"
            android:text="Connecter" />

        <EditText
            android:id="@+id/textLogin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:editable="false"
            android:ellipsize="none"
            android:ems="10"
            android:gravity="center|top"
            android:inputType="textPersonName"
            android:isScrollContainer="false"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="ERROR: Nom ou mot de passe invalide."
            android:textColor="#FFFFFF"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>